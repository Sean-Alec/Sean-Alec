# Change directory from /home to mediawiki directory
# Create Backup-Hour-Minute_day_month_year.tar from ./folder1 ./folder2 and file1.php
# Move backup file to ../backup directory
# run command with crontab 
cd path/to/folder && tar -cf Backup-"$(date "+%H-%M_%d-%m-%y")".tar ./folder1 ./folder2 file1.php && mv Backup-"$(date "+%H-%M_%d-%m-%y")".tar ../backup

# or bash script
# At my exemple script is in /home
# make a script executable
# chmod x hello_script.sh
#!/bin/bash
cd path/to/folder && tar -cf Backup-"$(date "+%H-%M_%d-%m-%y")".tar ./folder1 ./folder2 file1.php && mv Backup-"$(date "+%H-%M_%d-%m-%y")".tar ../backup


